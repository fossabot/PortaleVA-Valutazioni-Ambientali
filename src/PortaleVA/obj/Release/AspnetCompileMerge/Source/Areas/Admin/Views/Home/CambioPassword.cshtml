@model VAPortale.Areas.Admin.Models.HomeCambioPasswordModel

@{
    ViewBag.Title = "Cambio Password";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section head {
    <script src="@Url.VAScript("jquery.validate.min.js")"></script>
    <script src="@Url.VAScript("jquery.validate.unobtrusive.min.js")"></script>
    }

<div class="boxLogin">
    <h2>Modifica Password</h2>
    @using (Html.BeginForm("CambioPassword", "Home"))
    {
        <div class="divLogin">
            <table width="100%" border="0">
                <tr>
                    <td align="left"><label>Vecchia Password</label></td>
                    <td align="left">@Html.PasswordFor(m => m.VecchiaPassword)</td>
                    <td align="left">@Html.ValidationMessageFor(m => m.VecchiaPassword)</td>
                </tr>
                <tr>
                    <td align="left"><label>Nuova Password</label></td>
                    <td align="left">@Html.PasswordFor(m => m.NuovaPassword)</td>
                    <td align="left">@Html.ValidationMessageFor(m => m.NuovaPassword)</td>
                </tr>
                <tr>
                    <td align="left"><label>Conferma Nuova Password</label></td>
                    <td align="left">@Html.PasswordFor(m => m.ConfermaNuovaPassword)</td>
                    <td align="left">@Html.ValidationMessageFor(m => m.ConfermaNuovaPassword)</td>
                </tr>
                <tr>
                    <td align="left">&nbsp;</td>
                    <td align="left"><input type="submit" value="Modifica" class="submit" /></td>
                </tr>
            </table>
        </div>
    }
</div>
