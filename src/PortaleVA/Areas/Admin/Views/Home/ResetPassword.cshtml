@model VAPortale.Areas.Admin.Models.ResetPasswordModel

@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="corpo" class="contenuto">
    <h2>Reset Password</h2>

    @if (Model.TokenValido)
    {
        using (Html.BeginForm("ResetPassword", "Home", null, FormMethod.Post))
        {
            @Html.HiddenFor(m => m.UtenteId);
            <table class="edita principale">
                <tr>
                    <th class="obbligatorio">
                        @Html.LabelFor(m => m.Password)
                    </th>
                    <td>
                        @Html.TextBoxFor(m => m.Password, new { type = "password" })
                        
                    </td>
                </tr>
                <tr>
                    <th class="obbligatorio">
                        @Html.LabelFor(m => m.ConfermaPassword)
                    </th>
                    <td>
                        @Html.TextBoxFor(m => m.ConfermaPassword, new { type = "password" })
                      
                    </td>
                </tr>
            </table>
            <div class="side">
                <div class="publishing">
                    @Html.ValidationSummary()
                    <input type="submit" name="Salva" value="Salva" />

                </div>

            </div>
        }
    }
    else
    {
        <p>Il token non è valido</p>
    }

</div>
