@model VAPortale.Models.ComunicazioneProponenteModel
@{
    ViewBag.Title = string.Format("{0} - Valutazioni Ambientali", Model.VoceMenu.GetNome());
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}
<div class="line_small_title">
    <h2>@Model.VoceMenu.GetNome()</h2>
</div>
<div class="clear"></div>
@if (Model.Links != null && Model.Links.Count > 0)
{
    <ul class="elencoProponente">
        @foreach (VoceMenu voce in Model.Links)
        {
            <li>
                @if (voce.Editabile)
                {
                    <a href="@Url.RouteUrl("PaginaStatica", new { nomeSezione = voce.Sezione, nomeVoce = voce.Voce })" title="@voce.GetNome()">@voce.GetNome()</a>
                }
                else
                {
                    <a href="@Url.Action(voce.Voce, voce.Sezione)" title="@voce.GetNome()">@voce.GetNome()</a>
                }
            </li>
        }
    </ul>
}

